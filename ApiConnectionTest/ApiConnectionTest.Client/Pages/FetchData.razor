@page "/fetchdata"
@rendermode InteractiveAuto

<h3>Stock Ticker Data</h3>

<p>Get the data from Polygon.io:</p>
<button class="btn btn-primary" @onclick="Test">Clear Data</button>
<button class="btn btn-primary" @onclick="GetTickerData">Get Data</button>

@if (tickerData != null)
{
    <p>Symbol: @tickerData.Ticker</p>
    <p>Stock amount: @tickerData.WeightedSharesOutstanding</p>
    <p>Icon: <img src="@tickerData.Branding.IconUrl" height="100" /> </p>
    <p>Logo: <img src="@tickerData.Branding.LogoUrl" height="100" /> </p>
    <p>@time</p>
}

